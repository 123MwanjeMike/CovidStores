doctype html
html(lang="en")
    head
        title Agent | #{pageTitle}
        include ../includes/head.pug
    body.sb-nav-fixed
        //Navigation bar
        nav.sb-topnav.navbar.navbar-expand.navbar-dark.bg-dark.siteTheme
            a.navbar-brand(href="/") Covid Stores
            button.btn.btn-link.btn-sm.order-1.order-lg-0#sidebarToggle(href="#")
                i.fas.fa-bars
            // Navbar Search
            form.d-none.d-md-inline-block.form-inline.ml-auto.mr-0.mr-md-3.my-2.my-md-0(method="GET" action="/agent/search")
                .input-group#username
                    | #{user.fname} #{user.lname}

            // Navbar
            ul.navbar-nav.ml-auto.ml-md-0
                li.nav-item.dropdown
                    a#userDropdown.nav-link.dropdown-toggle(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        i.fas.fa-user.fa-fw
                    .dropdown-menu.dropdown-menu-right(aria-labelledby="userDropdown")
                        a.dropdown-item(href="/logout") Logout
        #layoutSidenav
            //Side bar navigation
            #layoutSidenav_nav
                nav#sidenavAccordion.sb-sidenav.accordion.sb-sidenav-light
                    .sb-sidenav-menu
                        .nav
                            .sb-sidenav-menu-heading Add
                            a.nav-link(href="/agent/addPurchase")
                                .sb-nav-link-icon
                                    i.fas.fa-plus
                                |                             Purchase
                            a.nav-link#installment(href="#" onClick="installment();")
                                .sb-nav-link-icon
                                    i.fas.fa-plus
                                |                             Installment
                            
                            .sb-sidenav-menu-heading Update
                            a.nav-link(href="/agent/updatePurchase")
                                .sb-nav-link-icon
                                    i.fas.fa-edit
                                |                             Purchase

                            .sb-sidenav-menu-heading View
                            a.nav-link(href="/agent/items")
                                .sb-nav-link-icon
                                    i.fas.fa-table
                                |                             Items
                            a.nav-link(href="/agent/clients")
                                .sb-nav-link-icon
                                    i.fas.fa-table
                                |                             Clients
                            a.nav-link(href="/agent/viewPurchases")
                                .sb-nav-link-icon
                                    i.fas.fa-table
                                |                             Purchases

                    .sb-sidenav-footer.bg-dark
                        .small Logged in as:
                        |   Agent #{user.empid}
            
            #layoutSidenav_content

                // The page's main content
                main
                    block content

                include ../includes/footer.pug

        include ../includes/scripts.pug