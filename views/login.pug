doctype html
html(lang="en")
    head
        title Login - Covid Stores
        include inc/head.pug

    body
        h3 Login
        form(method="POST" action='login/authentication')
            div.form-group
                label Email
                input(type="email" placeholder="Enter email address" name="email")
            div.form-group
                label Password
                input(type="password" placeholder="Enter Password" name="password")
            div.form-group
                input(type="checkbox" name="checkbox")
                label Remember me
            div.form-group
                button(type="submit") Login
                br
                a(href="login/passwordRecovery") Forgot Password
                
                   
        include inc/footer.pug
