doctype html
html(lang="en")
    head
        title Manager - #{pageTitle}
        include ../includes/head.pug
    body.sb-nav-fixed
        //Navigation bar
        nav.sb-topnav.navbar.navbar-expand.navbar-dark.bg-dark
            a.navbar-brand(href="/agent") Covid Stores
            // Navbar Search
            form.d-none.d-md-inline-block.form-inline.ml-auto.mr-0.mr-md-3.my-2.my-md-0(method="GET" action="/agent/search")
                .input-group
                    input.form-control(type="text" placeholder="Search" name="search")
                    .input-group-append
                        button.btn.btn-primary(type="submit")
                            i.fas.fa-search
            // Navbar
            ul.navbar-nav.ml-auto.ml-md-0
                li.nav-item.dropdown
                    a#userDropdown.nav-link.dropdown-toggle(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        i.fas.fa-user.fa-fw
                    .dropdown-menu.dropdown-menu-right(aria-labelledby="userDropdown")
                        a.dropdown-item(href="/login") Logout
        #layoutSidenav
            //Side bar navigation
            #layoutSidenav_nav
                nav#sidenavAccordion.sb-sidenav.accordion.sb-sidenav-dark
                    .sb-sidenav-menu
                        .nav
                            .sb-sidenav-menu-heading Core
                            a.nav-link(href="/agent")
                                .sb-nav-link-icon
                                    i.fas.fa-tachometer-alt
                                |                             Dashboard
                            .sb-sidenav-menu-heading Interface
                            a.nav-link.collapsed(href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages")
                                .sb-nav-link-icon
                                    i.fas.fa-book-open
                                |                             Actions
                                .sb-sidenav-collapse-arrow
                                    i.fas.fa-angle-down
                            #collapsePages.collapse(aria-labelledby="headingTwo" data-parent="#sidenavAccordion")
                                nav#sidenavAccordionPages.sb-sidenav-menu-nested.nav.accordion
                                    a.nav-link.collapsed(href="#" data-toggle="collapse" data-target="#pagesCollapseAuth" aria-expanded="false" aria-controls="pagesCollapseAuth")
                                        | Purchases
                                        .sb-sidenav-collapse-arrow
                                            i.fas.fa-angle-down
                                    #pagesCollapseAuth.collapse(aria-labelledby="headingOne" data-parent="#sidenavAccordionPages")
                                        nav.sb-sidenav-menu-nested.nav
                                            a.nav-link(href="/agents/addPurchase") Add Purchase
                                            a.nav-link(href="/agents/updatePurchase") Update Purchase
                                    a.nav-link.collapsed(href="#" data-toggle="collapse" data-target="#pagesCollapseError" aria-expanded="false" aria-controls="pagesCollapseError")
                                        | Installment Payments
                                        .sb-sidenav-collapse-arrow
                                            i.fas.fa-angle-down
                                    #pagesCollapseError.collapse(aria-labelledby="headingOne" data-parent="#sidenavAccordionPages")
                                        nav.sb-sidenav-menu-nested.nav
                                            a.nav-link(href="/agent/recordPayment")
                                                | Record Payment
                                            a.nav-link(href="/agent/updatePayement")
                                                | Update payment

                            .sb-sidenav-menu-heading View
                            a.nav-link(href="/agent/balances")
                                .sb-nav-link-icon
                                    i.fas.fa-table
                                |                             Payment Balances
                            a.nav-link(href="/agent/clients")
                                .sb-nav-link-icon
                                    i.fas.fa-table
                                |                             Program Clients
                            .sb-sidenav-menu-heading More
                            a.nav-link(href="/agent/calculator")
                                .sb-nav-link-icon
                                    i.fas.fa-calculator
                                |                             Installment Calculator
                    .sb-sidenav-footer
                        .small Logged in as:
                        |                     #{user}

            
            #layoutSidenav_content

                // The page's main content
                main
                    block content

                include ../includes/footer.pug

        include ../includes/scripts.pug