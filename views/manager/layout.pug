doctype html
html(lang="en")
    head
        title Covid Stores | #{pageTitle}
        include ../includes/head.pug
    body.sb-nav-fixed
        //Navigation bar
        nav.sb-topnav.navbar.navbar-expand.navbar-dark.bg-dark.siteTheme
            a.navbar-brand(href="/") Covid Stores
            button.btn.btn-link.btn-sm.order-1.order-lg-0#sidebarToggle(href="#")
                i.fas.fa-bars
            // Navbar Search
            form.d-none.d-md-inline-block.form-inline.ml-auto.mr-0.mr-md-3.my-2.my-md-0(method="GET" action="/manager/search")
                .input-group
                    input.form-control(type="text" placeholder="Search" name="search")
                    .input-group-append.search
                        button.btn.btn-primary.search(type="submit")
                            i.fas.fa-search
            // Navbar
            ul.navbar-nav.ml-auto.ml-md-0
                li.nav-item.dropdown
                    a#userDropdown.nav-link.dropdown-toggle(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        i.fas.fa-user.fa-fw
                    .dropdown-menu.dropdown-menu-right(aria-labelledby="userDropdown")
                        a.dropdown-item(href="/logout") Logout
        #layoutSidenav
            //Side bar navigation
            #layoutSidenav_nav
                nav#sidenavAccordion.sb-sidenav.accordion.sb-sidenav-light
                    .sb-sidenav-menu
                        .nav
                            .sb-sidenav-menu-heading Core
                            a.nav-link(href="/manager")
                                .sb-nav-link-icon
                                    i.fas.fa-tachometer-alt
                                |                             Dashboard
                            
                            .sb-sidenav-menu-heading Add
                            a.nav-link(href="/manager/addItems")
                                .sb-nav-link-icon
                                    i.fas.fa-plus
                                |                             Item
                            a.nav-link(href="/manager/registerAgent")
                                .sb-nav-link-icon
                                    i.fas.fa-plus
                                |                             Sales Agent        
                                            
                            .sb-sidenav-menu-heading View
                            a.nav-link(href="/manager/items")
                                .sb-nav-link-icon
                                    i.fas.fa-table
                                |                             Items
                            a.nav-link(href="/manager/transactions")
                                .sb-nav-link-icon
                                    i.fas.fa-table
                                |                             Transactions
                            a.nav-link(href="/manager/agents")
                                .sb-nav-link-icon
                                    i.fas.fa-table
                                |                             Sales Agents
                    .sb-sidenav-footer.bg-dark
                        .small Logged in as:
                        |  #{user.fname} #{user.lname}

            #layoutSidenav_content

                // The page's main content
                main
                    block content

                include ../includes/footer.pug

        include ../includes/scripts.pug