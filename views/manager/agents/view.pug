extends ../layout.pug

block content
    .card.mb-4
        .card-header
            i.fas.fa-table.mr-1
            |    Sales Agents

        .card-body
                .table-responsive
                    table#dataTable.table.table-bordered(width="100%" cellspacing="0")
                        thead
                            tr                     
                                th National ID
                                th Employee ID
                                th First Name
                                th Last Name
                                th Role
                                th Date of Birth
                                th Gender
                                th
                                th
                                
                        tbody
                            each agent in users
                                tr
                                    td #{agent.NIN}
                                    td #{agent.empid}
                                    td #{agent.fname}
                                    td #{agent.lname}
                                    td #{agent.role}
                                    td #{agent.dob}
                                    td #{agent.gender}
                                    td
                                        form(method="get" action='/manager/updateAgent')
                                            input(type="hidden" placeholder="" name="id", value=agent._id)
                                            button(type="submit")
                                                i.fas.fa-edit
                                    td
                                        form(method="post" action='/manager/removeAgent')
                                            input(type="hidden" placeholder="" name="id", value=agent._id)
                                            button(type="submit")
                                                i.fas.fa-trash