extends ../layout.pug

block content
    #outer
        h2 Sales Agent Registration:
        #inner
            div
                form(method="POST" action="/manager/registerAgent")
                    fieldset
                        legend Credentials
                        .control
                            label National ID
                            input(type="text" placeholder="NIN" name="NIN")
                        .control
                            label Employee ID
                            input(type="text" placeholder="Employee ID" name="empid")
                        .control
                            label Password
                            input(type="password" placeholder="Password" name="password")
                        .control
                            input(type="hidden" name="role" value="Sales Agent")
                                    
                    fieldset
                        legend Bio-data
                        .control
                            label First name
                            input#firstname(type="text" placeholder="First Name" name="fname")
                        .control
                            label Last name
                            input#lastname(type="text" placeholder="Last Name" name="lname")
                        .control
                            label Date of Birth
                            input#dob(type="date" name="dob")
                        .control
                            label Gender
                            input(list="gender" Placeholder="Gender" name="gender")
                            datalist(id="gender")
                                option
                                    | Male
                                option
                                    | Female

                    input#submit(type="submit" value="Register" onclick="validate()")
                