extends ../layout.pug

block content
    .card.mb-4
        .card-header
            i.fas.fa-table.mr-1
            |    LTTP Items

        .card-body
                .table-responsive
                    table#dataTable.table.table-bordered(width="100%" cellspacing="0")
                        thead
                            tr                     
                                th National ID
                                th Employee ID
                                th First Name
                                th Last Name
                                th Date of Birth
                                th Gender
                                th Telephone
                                th Email
                                th Address
                        tbody
                            each item in LTPP
                                tr
                                    td #{item.NIN}
                                    td #{item.empid}
                                    td #{item.fname}
                                    td #{item.lname}
                                    td #{item.dob}
                                    td #{item.gender}
                                    td #{item.telephone}
                                    td #{item.email}
                                    td #{item.address}
                                    td
                                        form(method="get" action='/manager/updateItem')
                                            input(type="hidden" placeholder="" name="id", value=item._id)
                                            button(type="submit")
                                                i.fas.fa-edit
                                    td
                                        form(method="post" action='/manager/removeItem')
                                            input(type="hidden" placeholder="" name="id", value=item._id)
                                            button(type="submit")
                                                i.fas.fa-trash